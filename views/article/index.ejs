<div class="mt-3 ml-2">

  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
      <div class="card text-left" id="user-list">
        <div class="card-body">
          <a class="btn btn-outline-success mr-3 mb-1 float-right" href="/responsable/new" type="button">Nouveaux</a>
            <h4 class="card-title mb-3"> Liste des Article </h4>
            <p>La liste des Article disponible sur le site </p>
            <div class="table-responsive">
              <table id="myTab" class="table table-striped">
                <thead>
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nom de l'article</th>
                      <th scope="col">Reference de l'article</th>
                      <th scope="col">Designation</th>
                      <th scope="col">Action</th>
                  </tr>
              </thead>
              <tbody>
                <% responsable.forEach((item, i) => { %>
                  <tr>
                      <th scope="row"><%= (i + 1) %> </th>
                      <td><%= item.nomArticle %></td>
                      <td><%= item.reference %></td>
                      <td><%= item.designation %></td>
                      <td>
                        <a class="text-success mr-2" href="/article/show/<%= item.id %>"><i class="fa fa-eye"></i></a>

                        <a class="text-warning mr-2" href="/article/edit/<%= item.id %>"><i class="fa fa-pencil"></i></a>

                        <a class="text-danger mr-2" href="/article/delete/<%= item.id %>"><i class="fa fa-trash"></i></a>
                      </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="row">
              <div class="col-md-12 text-succes">
                  <ul class="pagination pull-right mr-3">
                      <%- pagination %>
                  </ul>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


