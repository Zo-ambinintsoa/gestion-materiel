<div class="mt-3 ml-2">

  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
      <div class="card text-left" id="user-list">
        <div class="card-body">
          <a class="btn btn-outline-success mr-3 mb-1 float-right" href="/responsable/new" type="button">Nouveaux</a>
            <h4 class="card-title mb-3"> Liste des destination </h4>
            <p>La liste des destination disponible sur le site </p>
            <div class="table-responsive">
              <table id="myTab" class="table table-striped">
                <thead>
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">ville de destination</th>
                      <th scope="col">Lot</th>
                      <th scope="col">Code</th>
                      <th scope="col">Action</th>
                  </tr>
              </thead>
              <tbody>
                <% destination.forEach((item, i) => { %>
                  <tr>
                      <th scope="row"><%= (i + 1) %> </th>
                      <td><%= item.ville %></td>
                      <td><%= item.lot %></td>
                      <td><%= item.code %></td>
                      <td>
                        <a class="text-success mr-2" href="/destination/show/<%= item.id %>"><i class="fa fa-eye"></i></a>

                        <a class="text-warning mr-2" href="/destination/edit/<%= item.id %>"><i class="fa fa-pencil"></i></a>

                        <a class="text-danger mr-2" href="/destination/delete/<%= item.id %>"><i class="fa fa-trash"></i></a>
                      </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    let table = new DataTable('#myTab', {
        // options
    });
    </script>
</div>


