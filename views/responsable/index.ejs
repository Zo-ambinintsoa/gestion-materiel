<div class="mt-3 ml-2">

  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
      <div class="card text-left" id="user-list">
        <div class="card-body">
          <a class="btn btn-outline-success mr-3 mb-1 float-right" href="/responsable/new" type="button">Nouveaux</a>
            <h4 class="card-title mb-3"> Liste des Responsable </h4>
            <p>La liste des Responsable   </p>
            <div class="table-responsive">
              <table id="myTab" class="table table-striped">
                <thead>
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nom du responsable</th>
                      <th scope="col">Prenom du responsable</th>
                      <th scope="col">Cin</th>
                      <th scope="col">Action</th>
                  </tr>
              </thead>
              <tbody>
                <% responsable.forEach((item, i) => { %>
                  <tr>
                      <th scope="row"><%= (i + 1) %> </th>
                      <td><%= item.fisrtName %></td>
                      <td><%= item.lastName %></td>
                      <td><%= item.cin %></td>
                      <td>
                        <a class="text-success mr-2" href="/responsable/show/<%= item.id %>"><i class="fa fa-eye"></i></a>

                        <a class="text-warning mr-2" href="/responsable/edit/<%= item.id %>"><i class="fa fa-pencil"></i></a>

                        <a class="text-danger mr-2" href="/responsable/delete/<%= item.id %>"><i class="fa fa-trash"></i></a>
                      </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    let table = new DataTable('#myTab', {
        // options
    });
    </script>
</div>


